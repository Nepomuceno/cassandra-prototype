{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "title": "Order entity",
  "required": ["id", "product", "description", "items"],
  "additionalItems": false,
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": "string",
      "title": "The order ID",
      "format": "uuid"
    },
    "product": {
      "$id": "#/properties/product",
      "type": "string",
      "title": "The product name"
    },
    "description": {
      "$id": "#/properties/description",
      "type": "string",
      "title": "The order description"
    },
    "items": {
      "$id": "#/properties/items",
      "type": "number",
      "title": "The number of items"
    }
  }
}
